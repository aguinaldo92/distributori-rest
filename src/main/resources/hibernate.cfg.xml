<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.bytecode.use_reflection_optimizer">false</property>
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="hibernate.connection.url">jdbc:mysql://127.0.0.1:3306/distributoridb?autoReconnect=true</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.connection.password"></property>
		<property name="hibernate.dialect">it.unisalento.rest.distributori.customdialect.CustomMySQLDialect</property>
		<property name="hibernate.search.autoregister_listeners">false</property>
		<property name="hibernate.show_sql">true</property>
		<property name="hibernate.validator.apply_to_ddl">false</property>

		<property name="hibernate.c3p0.min_size">5</property>
		<property name="hibernate.c3p0.max_size">20</property>
		<property name="hibernate.c3p0.timeout">3000</property>
		<property name="hibernate.c3p0.max_statements">50</property>
		<property name="hibernate.c3p0.idle_test_period">300</property>
		<mapping resource="it/unisalento/rest/distributori/domain/Feedback.hbm.xml" />
		<mapping resource="it/unisalento/rest/distributori/domain/ProdottiErogati.hbm.xml" />
		<mapping resource="it/unisalento/rest/distributori/domain/Persona.hbm.xml" />
		<mapping resource="it/unisalento/rest/distributori/domain/Produttore.hbm.xml" />
		<mapping resource="it/unisalento/rest/distributori/domain/Categoria.hbm.xml" />
		<mapping resource="it/unisalento/rest/distributori/domain/CategorieFornite.hbm.xml" />
		<mapping resource="it/unisalento/rest/distributori/domain/FamiglieProdotto.hbm.xml" />
		<mapping resource="it/unisalento/rest/distributori/domain/Distributore.hbm.xml" />
		<mapping resource="it/unisalento/rest/distributori/domain/Famiglia.hbm.xml" />
		<mapping resource="it/unisalento/rest/distributori/domain/Prodotto.hbm.xml" />
		<mapping resource="it/unisalento/rest/distributori/domain/Dipendente.hbm.xml" />
		<mapping resource="it/unisalento/rest/distributori/domain/Rifornisce.hbm.xml" />
		<mapping resource="it/unisalento/rest/distributori/domain/Manutiene.hbm.xml" />
		<mapping resource="it/unisalento/rest/distributori/domain/Stabilimento.hbm.xml" />
		<mapping resource="it/unisalento/rest/distributori/domain/Acquista.hbm.xml" />
	</session-factory>
</hibernate-configuration>
